package work1;
import java.util.Scanner;

public class itemes {
    public static void main(String[] args) {
        Scanner input = new Scanner(System.in);

        // Ask how many items the customer bought
        System.out.print("How many different items? ");
        int itemCount = input.nextInt();

        // Create variables to store total
        double total = 0;

        // Repeat for each item
        for (int i = 1; i <= itemCount; i++) {
            System.out.println("\nItem " + i);

            System.out.print("Item name: ");
            String name = input.next();

            System.out.print("Price per unit: ");
            double price = input.nextDouble();

            System.out.print("Quantity: ");
            int quantity = input.nextInt();

            double subtotal = price * quantity;
            total += subtotal;

            // Show item details
            System.out.println(name + " x " + quantity + " @ " + price + " = " + subtotal);
        }

        // Check for discount
        double discount = 0;
        if (total > 50000) {
            discount = total * 0.05;
        }

        double finalAmount = total - discount;

        // Print final receipt
        System.out.println("\n====================");
        System.out.println("Total before discount: " + total);
        System.out.println("Discount: " + discount);
        System.out.println("Final amount to pay: " + finalAmount);
        System.out.println("====================");
    }
}
